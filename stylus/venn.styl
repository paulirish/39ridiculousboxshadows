/*
 *  The Venn
 */
.venn
	background rgba(150,60,150,1)
	box-shadow 0 0 60px rgba(255,195,205,.2), -40px 0 0 rgba(61,21,21,1), 0 0 40px rgba(255,195,205,.3)
	left 20px
	position relative

	span
		box-shadow 0 0 60px rgba(195,195,255,.2), 40px 0 0 rgba(21,21,91,1), 0 0 40px rgba(195,195,255,.3)
		left -40px
		z-index 10
	
	h2
		display block
		left -20px
		padding-top 45px
		position relative