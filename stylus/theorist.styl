@import 'nib'
/*!
 *  The Color Theorist
 */
.theorist
	box-shadow  0 0px 1px 0 rgba(255,255,255,.7), 0 0px 20px 2px rgba(255,255,255,.8)

	span
		&:nth-of-type(1)
			box-shadow  0 -10px 3px 2px rgba(0,255,0,1)
		
		&:nth-of-type(2)
			box-shadow  10px 10px 3px 2px rgba(0,0,255,1)
		
		&:nth-of-type(3)
			box-shadow  -10px 10px 3px 2px rgba(255,0,0,1)
		
		&:nth-of-type(4)
			transform   skewX(-10deg) scale(.8)
			box-shadow  18px -11px 3px 0 rgba(0,255,255,1)
		
		&:nth-of-type(5)
			transform   scaleX(.7)  scaleY(.8)
			box-shadow  0 33px 3px 0 rgba(255,0,255,1)
		
		&:nth-of-type(6)
			transform   skewX(10deg) scale(.8)
			box-shadow  -18px -11px 3px 0 rgba(255,255,0,1)