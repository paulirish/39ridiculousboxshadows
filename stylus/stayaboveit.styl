@import 'nib'
/*!
 *  The Fold
 */
.stayaboveit
	background      rgba(81,81,81,1)
	border-radius   0
	box-shadow      @css{ 0 15px 5px -10px rgba(0,0,0,0.2) }
	overflow        hidden

	h2
		display     block
		padding-top 40px
		z-index     2
	
	&::before
	&::after
		content     ''
		display     block
		box-shadow  @css{ 0 0 30px rgba(0,0,0,.5) }
		height      150px
		absolute    top left
		width       150px
		z-index     1
	
	&::after
		top         75px
	
	&::before
		box-shadow  0 0 30px rgba(0,0,0,.2)
		left        75px