@import 'nib'
/*!
 *  The Gallagher
 */
.nonotthatone
	border-radius   0
	overflow        hidden

	&::before
		border-width    0 30px 30px 0
		border-style    solid
		border-color    rgb(91,91,91) rgb(51,51,51)
		border-radius   2px
		content         ''
		absolute        top -2px right 0
		z-index         4 !important
	
	&::after
		box-shadow  @css{ 3px 15px 10px -10px rgba(0,0,0,.2) }
		content     'Look at this! http://nicolasgallagher.com/pure-css-folded-corner-effect/'
		display     block
		height      40px
		absolute    top -12px right -10px
		text-indent -9999px
		width       40px
		z-index     4 !important