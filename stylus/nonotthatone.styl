/*
 *  The Gallagher
 */
.nonotthatone
	border-radius 0
	overflow hidden

	&::before
		border-width 0 30px 30px 0
		border-style solid
		border-color rgba(91,91,91,1) rgba(51,51,51,1)
		border-radius 2px
		content ""
		position absolute
		top -2px
		right 0
		z-index 2
	
	&::after
		box-shadow 3px 15px 10px -10px rgba(0,0,0,.2)
		content "Look at this! http://nicolasgallagher.com/pure-css-folded-corner-effect/"
		display block
		height 40px
		position absolute
		right -10px
		text-indent -9999px
		top -12px
		width 40px
		z-index 3