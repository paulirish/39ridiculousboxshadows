@import 'nib'
/*!
 *  The Rippler
 */
@keyframes ripple 
	0% 
		box-shadow  @css{ 0 0 85px 10px rgba(41,41,41,1), 0 0 0px 0 rgba(255,255,255,.0), 0 0 100px 10px rgba(41,41,41,1) }

	15% 
		box-shadow  @css{ 0 0 25px 0 rgba(41,41,41,1), 0 0 0px 0 rgba(255,255,255,.4), 0 0 100px 10px rgba(41,41,41,1) }

	50% 
		box-shadow  @css{ 0 0 45px 20px rgba(41,41,41,1), 0 0 80px 10px rgba(255,255,255,.4), 0 0 100px 10px rgba(41,41,41,1) }

	95% 
		box-shadow  @css{ 0 0 100px 20px rgba(41,41,41,1), 0 0 75px 5px rgba(255,255,255,0), 0 0 100px 10px rgba(41,41,41,1) }

	100% 
		box-shadow  @css{ 0 0 100px 20px rgba(41,41,41,1), 0 0 0 0 rgba(255,255,255,0), 0 0 100px 10px rgba(41,41,41,1) }


.ripplin
	animation-name              ripple
	animation-duration          2s
	animation-iteration-count   infinite
	animation-direction         normal
	animation-timing-function   ease-in-out